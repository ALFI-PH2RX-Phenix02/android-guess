<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/t_hint"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="The computer only considers a number from 1 to 1000"
        android:textSize="15sp"
        />

     <ImageView
         android:id="@+id/btn_1up"
         android:layout_centerHorizontal="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/t_hint"
         android:layout_marginTop="100dp"
         android:onClick="Oneup"
         android:src="@drawable/up"
         />
    <ImageView
        android:id="@+id/btn_1up_gray"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_hint"
        android:layout_marginTop="100dp"
        android:src="@drawable/up_gray"
        />

    <EditText
        android:id="@+id/t_number"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1up"
        android:hint="####"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/btn_1down"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_number"
        android:src="@drawable/down"
        android:onClick="Onedown"
        />
    <ImageView
        android:id="@+id/btn_1down_gray"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_number"
        android:src="@drawable/down_gray"
        />

    <ImageView
        android:id="@+id/btn_check"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_1down"
        android:layout_margin="100dp"
        android:src="@drawable/check"
        android:onClick="check"
        />
    <ImageView
        android:id="@+id/btn_check_gray"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_1down"
        android:layout_margin="100dp"
        android:src="@drawable/check_gray"
        />
    <ImageView
        android:id="@+id/img_correct"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_1down"
        android:layout_margin="120dp"
        android:src="@drawable/correct"
        />
    <ImageView
        android:id="@+id/img_wrong"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_1down"
        android:layout_margin="120dp"
        android:src="@drawable/wrong"
        />
</RelativeLayout>